<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:src="@drawable/logo" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:shrinkColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/view_shape">

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_span="320"
                android:background="@drawable/intro_table_shape"
                android:gravity="center"
                android:text="리뷰"
                android:textSize="24sp"
                android:textStyle="bold" />
        </TableRow>


        <TableRow
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/view_shape">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/intro_table_shape"
                android:gravity="center"
                android:text="회사명"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/taxi_com"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="*****"
                android:textSize="24sp" />
        </TableRow>
        <TableRow
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/view_shape">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/intro_table_shape"
                android:gravity="center"
                android:text="택시 면허"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/taxi_license"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="*****"
                android:textSize="24sp" />
        </TableRow>
        <TableRow
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/view_shape">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/intro_table_shape"
                android:gravity="center"
                android:text="차량 번호"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/taxi_num"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="*****"
                android:textSize="24sp" />
        </TableRow>
        <TableRow
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/view_shape">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/intro_table_shape"
                android:gravity="center"
                android:text="별점"
                android:textSize="24sp"
                android:textStyle="bold" />


            <RatingBar
                android:id="@+id/review_star"
                android:layout_width="214dp"
                android:layout_height="match_parent"
                android:isIndicator="true"
                android:max="5"
                android:numStars="5"
                android:rating="1"
                android:stepSize="0.5" />


        </TableRow>
        <TableRow
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/view_shape">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/intro_table_shape"
                android:gravity="center"
                android:text="내용"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/review"
                android:layout_width="230dp"
                android:layout_height="208dp"
                android:text="DESC-2"
                android:textSize="24sp" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <Button
            android:id="@+id/nob_button"
            android:layout_width="300px"
            android:layout_height="50dp"
            android:background="@drawable/oran_btn"
            android:text="건너뛰기" />
        <View
            android:layout_width="100dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/write_button"
            android:layout_width="300px"
            android:background="@drawable/oran_btn"
            android:layout_height="50dp"
            android:text="작성" />
    </LinearLayout>
</LinearLayout>