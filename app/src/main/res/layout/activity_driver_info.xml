<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:shrinkColumns="*"
        android:stretchColumns="*">
        <TableRow>
            <ImageView
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:src="@drawable/logo"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="40dp">

            <ImageView
                android:id="@+id/driver_image"
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:background="@drawable/view_shape"/>

            <TextView
                android:id="@+id/driver_name"
                android:layout_width="197dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="왕 안 전"
                android:textSize="36sp"
                android:textStyle="bold"/>
        </TableRow>

        <TableRow
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/view_shape">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:background="@drawable/intro_table_shape"
                android:gravity="center"
                android:text="회사"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/taxi_com"
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:layout_span="320"
                android:gravity="center"
                android:text="DESC-2"
                android:textSize="24sp"/>
        </TableRow>

        <TableRow
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/view_shape">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:background="@drawable/intro_table_shape"
                android:gravity="center"
                android:text="택시면허"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/taxi_license"
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:layout_span="320"
                android:gravity="center"
                android:text="DESC-2"
                android:textSize="24sp"/>
        </TableRow>

        <TableRow
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/view_shape">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:background="@drawable/intro_table_shape"
                android:gravity="center"
                android:text="차량 번호"
                android:textSize="24sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/taxi_num"
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:layout_span="320"
                android:gravity="center"
                android:text="DESC-2"
                android:textSize="24sp"/>
        </TableRow>

        <TableRow
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/view_shape">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/intro_table_shape"
                android:gravity="center"
                android:text="평점"
                android:textSize="24sp"
                android:textStyle="bold"/>
            <RatingBar
                android:id="@+id/review_star"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:max="4"
                android:numStars="4"
                android:rating="1"
                android:stepSize="0.5"/>
        </TableRow>
        <TableRow
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/view_shape">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:background="@drawable/intro_table_shape"
                android:gravity="center"
                android:text="최근 리뷰"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/last_reivew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="320"
                android:gravity="center"
                android:text=""
                android:textSize="24sp" />
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="탑승하시겠습니까?"
        android:textSize="36sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/no_btn"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:background="@drawable/white_yellow_btn"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="아니오" />

        <View
            android:layout_width="50dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/yes_btn"
            android:layout_width="300px"
            android:background="@drawable/oran_btn"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="예" />
    </LinearLayout>
</LinearLayout>